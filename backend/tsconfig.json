{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment / module settings
    "module": "nodenext",
    "moduleResolution": "NodeNext",  // must be NodeNext or undefined
    "target": "es2020",
    "esModuleInterop": true,          // allows default imports from CJS modules
    "forceConsistentCasingInFileNames": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module / ESM related
    "verbatimModuleSyntax": false,    // turn off to avoid CommonJS conflict
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    // Misc
    "skipLibCheck": true
  }
}
